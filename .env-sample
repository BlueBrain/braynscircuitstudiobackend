# Docker compose related configs
COMPOSE_APP_PATH=.
COMPOSE_DATABASE_PATH=./.dev-database
COMPOSE_POSTGRES_PORT=5432
COMPOSE_REDIS_PORT=6379

# PostgreSQL default access credentials (for the docker-compose service)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=bcsb

# Do you want to check access tokens while in develop?
DEV_ANONYMOUS_ACCESS=1

