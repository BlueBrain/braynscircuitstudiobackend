BCSB_APP_HOST=0.0.0.0
BCSB_APP_PORT=8000
BCSB_ENVIRONMENT_MODE=development # development | production
BCSB_DJANGO_SECRET_KEY="SomeSecretKeyThatWillBeUsedForDevelopmentOnly"
BCSB_DJANGO_DEBUG=1
BCSB_DJANGO_ALLOWED_HOSTS=0.0.0.0,127.0.0.1,localhost
BCSB_LOG_LEVEL=DEBUG
BCSB_REDIS_HOST=redis
BCSB_REDIS_PORT=6379

# Database
BCSB_DB_HOST=database
BCSB_DB_PORT=5432
BCSB_DB_NAME=bcsb
BCSB_DB_USER=postgres
BCSB_DB_PASSWORD=postgres
BCSB_DB_TEST=bcsb_test

